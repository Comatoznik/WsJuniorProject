<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sample.Entitys.ClientEntity" table="client" schema="wsjunior">
        <id name="id">
            <column name="Id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="Name" sql-type="text" not-null="true"/>
        </property>
        <property name="surname">
            <column name="Surname" sql-type="text" not-null="true"/>
        </property>
        <property name="othername">
            <column name="Othername" sql-type="text" not-null="true"/>
        </property>
        <property name="phone">
            <column name="Phone" sql-type="varchar(12)" length="12"/>
        </property>
        <property name="email">
            <column name="Email" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="login">
            <column name="Login" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="password">
            <column name="Password" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>